  <style>
    .filtertax{
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    #filter{
      display: flex;
      flex-wrap: nowrap;
      align-items: center;
      overflow-x:scroll;
      max-width: 60%;
    }
  
    .filter{
      text-align: center;
      margin-right: 4rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filter p{
      font-size: 0.8rem;
    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }

    .tax-info{
      display: none;
    }

    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin: 1rem;
      display: flex;
      align-items: center;
    }

    .category-wrapper{
      max-width: 60%;
      position: relative;
    }
    .category-slider-wrapper {
      position: relative;
      padding: 10px 0;
      overflow: hidden;
      background-color: #fff;
      border-bottom: 1px solid #eee;
      max-width: 100%;
    }

    .category-slider {
      display: flex;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding: 10px 0;
    }

    .category-slider::-webkit-scrollbar {
      display: none;
    }

    .category-item {
      flex: 0 0 auto;
      width: 80px;
      margin: 0 8px;
      text-align: center;
      cursor: pointer;
    }

    .category-item img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .category-item span {
      display: block;
      margin-top: 6px;
      font-size: 13px;
      white-space: nowrap;
    }

    .scroll-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.9);
      border: none;
      font-size: 20px;
      cursor: pointer;
      padding: 5px 10px;
      z-index: 10;
      box-shadow: 0 0 4px rgba(0,0,0,0.2);
      border-radius: 40%;
    }

    .scroll-btn.left {
      left: -1.7rem;
      top: 2.7rem;

    }

    .scroll-btn.right {
      right: -1.7rem; 
      top: 2.7rem;
    }
  </style>
