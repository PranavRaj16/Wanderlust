<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <h3>Enter your new listing details:</h3>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="title"
            placeholder="Add your firm name"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!!</div>
          <div class="invalid-feedback">Title shouldn't be empty</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id="description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Description looks good!!</div>
          <div class="invalid-feedback">Description shouldn't be empty</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              id="price"
              class="form-control"
              placeholder="1200"
              required
            />
            <div class="valid-feedback">Price looks good!!</div>
            <div class="invalid-feedback">Price is invalid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              id="country"
              class="form-control"
              placeholder="India"
              required
            />
            <div class="valid-feedback">Country looks good!!</div>
            <div class="invalid-feedback">Country shouldn't be empty</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" id="category" class="form-select">
            <option value="" selected disabled hidden>&lt;-- select category --&gt;</option>
            <option value="rooms">Rooms</option>
            <option value="cities">Iconic Ciies</option>
            <option value="mountains">Mountains</option>
            <option value="castles">Castles</option>
            <option value="pools">Amazing Pools</option>
            <option value="camping">Camping</option>
            <option value="farms">Farms</option>
            <option value="artic">Artic</option>
            <option value="domes">Domes</option>
            <option value="boats">Boats</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            id="location"
            class="form-control"
            placeholder="Dwarakanagar, Visakhapatnam"
            required
          />
          <div class="valid-feedback">Location looks good!!</div>
          <div class="invalid-feedback">Location shouldn't be empty</div>
        </div>
        <button class="add-btn btn btn-dark mt-3">Add</button>
      </form>
    </body>
  </div>
</div>
